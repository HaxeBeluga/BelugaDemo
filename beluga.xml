<!-- Beluga general config -->

<database>
	<host>localhost</host>
	<!-- <port></port> -->
	<user>root</user>
	<pass></pass>
	<database>belugaDemo</database>
	<!-- <socket></socket> -->
</database>

<!-- List of active modules -->
<module name="account" config="account.xml" />

<!-- List of custom triggers and routes -->
<trigger name="index">
	<route class="Main" method="index" access="static">
		<param name="isLogged" type="Bool" value="${account.isLogged}" />
	</route>
</trigger>

<trigger name="login">
	<route class="Main" method="login" access="static">
	</route>
</trigger>

